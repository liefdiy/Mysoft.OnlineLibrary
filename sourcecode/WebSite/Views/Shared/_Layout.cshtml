<!DOCTYPE html>
<html>
	<head>
		<title>@ViewBag.Title</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
		<!--[if lt IE 9]>
			<script src="@Url.Content("~/Content/bootstrap/js/html5shiv.js")"></script>
		<![endif]-->
		<link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
		<link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
		<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
		
		<script type="text/javascript">
			window.onload = function () {
				$("#@ViewContext.RouteData.Values["controller"]").attr("class","active");
			};
			window.onscroll = function() {
			    var top = document.documentElement.scrollTop || document.body.scrollTop;  
			    if(top) {
					$("#subnav").attr("class", "navbar-fixed-top subnavbar-fixed");    
			    } else {
			        $("#subnav").attr("class", "container body-placeholder");
			    }
			};
		</script>
	</head>

	<body>
		<!-- Navbar
		================================================== -->
		
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="brand" href="/">Mysoft Library</a>
					<div class="nav-collapse collapse">
						<div class="navbar-form pull-right">
							<ul class="nav simple-input">
								<li class="">
									<input type="text" placeholder="请输入书名"/>
									<input type="button" class="btn btn-inverse" value="图书搜索" />
								</li>
								@*<li class="input-append">
									<input type="button" class="btn-link" style="margin-left: 30px;" value="@User.Identity.Name 你好" />
								</li>*@
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<div class="container body-placeholder" id="subnav">
			<div class="container">
				<ul class="nav nav-pills simple-bar" id="navbar">
					<!-- 以下要从后台根据权限输出 -->
					<li id="Home"><a href="@Url.Action("Index", "Home")">图书馆</a></li>
					<li id="KeptBooks"><a href="@Url.Action("Index", "KeptBooks")">已借图书/续借</a></li>
					<li id="History"><a href="@Url.Action("Index", "History")">借书记录</a></li>
					<li style="display: none;"><a href="#">图书预约</a></li>
					<li id="BookManage"><a href="@Url.Action("Index", "BookManage")">图书管理</a></li>
					<li id="LendedBooks"><a href="@Url.Action("Index", "LendedBooks")">借阅管理</a></li>
				</ul>
			</div>
		</div>
		
		@*<div class="container body-placeholder" id="subnav">
			<ul class="nav nav-pills simple-bar" id="navbar">
				<!-- 以下要从后台根据权限输出 -->
				<li id="Home"><a href="@Url.Action("Index", "Home")">图书馆</a></li>
				<li id="KeptBooks"><a href="@Url.Action("Index", "KeptBooks")">已借图书/续借</a></li>
				<li id="History"><a href="@Url.Action("Index", "History")">借书记录</a></li>
				<li style="display: none;"><a href="#">图书预约</a></li>
				<li id="BookManage"><a href="@Url.Action("Index", "BookManage")">图书管理</a></li>
				<li id="LendedBooks"><a href="@Url.Action("Index", "LendedBooks")">借阅管理</a></li>
			</ul>
		</div>*@

		<div class="container">
			@RenderBody()
		</div>
		<!--http://code.jquery.com/jquery.js-->
		<script src="@Url.Content("~/Scripts/jquery.js")" type="text/javascript"></script>
		<script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
	</body>
</html>
